<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#8298d9" />
            <stroke android:width="1dp" android:color="#4058a4" />
            <padding android:bottom="6dp" android:left="6dp" android:right="6dp" android:top="6dp" />
            <corners android:radius="3dp" />
        </shape>

    </item>
    <item>
        <shape>
            <gradient android:angle="270" android:endColor="#4058a4" android:startColor="#8298d9" />
            <stroke android:width="1dp" android:color="#4058a4" />
            <padding android:bottom="6dp" android:left="6dp" android:right="6dp" android:top="6dp" />
            <corners android:radius="3dp" />
        </shape>
    </item>

</selector>